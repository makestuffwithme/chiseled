{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "chiseled",
  "identifier": "com.makestuffwithme.chiseled",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "chiseled",
        "width": 500,
        "height": 130,
        "center": true,
        "transparent": false,
        "dragDropEnabled": false,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "windows": {
        "install-mode": "passive"
      },
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDg5QzMxNTI4QkVCQUQ2M0MKUldRODFycStLQlhEaVpWWE1vZlZySnpaWW5Vb3B3dWFudWpmZERLN0tsekRCemFBb1hKMkp4NWIK",
      "endpoints": [
        "https://github.com/makestuffwithme/chiseled/releases/latest/download/latest.json"
      ]
    }
  }
}